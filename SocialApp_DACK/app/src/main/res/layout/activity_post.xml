<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Trường tiêu đề bài viết -->
    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title" />

    <!-- Trường nội dung bài viết -->
    <EditText
        android:id="@+id/editTextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Content"
        android:lines="5"
        android:gravity="top"
        android:inputType="textMultiLine" />

    <!-- Hiển thị người đăng bài -->
    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posted by: Username"
        android:textColor="#000000"
        android:paddingTop="8dp" />

    <!-- Các nút hành động (Like, Comment, Save) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:paddingTop="16dp">

        <!-- Nút thích -->
        <ImageButton
            android:id="@+id/buttonLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like"
            android:contentDescription="@string/like_button"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Nút bình luận -->
        <ImageButton
            android:id="@+id/buttonComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment"
            android:contentDescription="@string/comment_button"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginStart="16dp" />

        <!-- Nút lưu bài viết -->
        <ImageButton
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_savee_black"
            android:contentDescription="@string/save_button"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Nút đăng bài -->
    <Button
        android:id="@+id/buttonPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post" />

</LinearLayout>
